#!/usr/bin/env bash
# Configure Nginx server so that /redirect_me is redirecting to another page

linkedin="\\\tlocation /redirect_me {\n\t\t return 301 https://www.linkedin.com/in/loubaris-ziyad-a3798320a;\n\t}\n"

apt-get -y update
apt-get -y install nginx
sed -i '0,/listen .*/s//listen 80 default_server;/' /etc/nginx/sites-available/default
sudo echo 'Holberton School for the win!' | sudo tee /var/www/html/index.nginx-debian.html
sudo sed -i "30i $linkedin" /etc/nginx/sites-available/default
sudo service nginx start
