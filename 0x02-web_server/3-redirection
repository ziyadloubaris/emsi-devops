#!/usr/bin/env bash
#configuring nginx server to /redirect_me to another page.
link="\\\tlocation /redirect_me {\n\t\t return 301 https://www.linkedin.com/in/loubaris-ziyad-a3798320a;\n\t}\n"
apt-get update
apt-get -y install nginx
sed -i '0,/listen .*/s//listen 80 default_server;/' /etc/nginx/sites-available/default
echo "Holberton School" > /var/www/html/index.nginx-debian.html
sed -i "49i $link" /etc/nginx/sites-available/default
service nginx restart
